<Window x:Class="SpeechToSpeech.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Speech2Speech" Height="425.902" Width="392">
  <Grid>
    <DockPanel HorizontalAlignment="Left" Height="19" LastChildFill="False" VerticalAlignment="Top" Width="376">
      <Menu Width="33">
        <MenuItem Header="_File">
          <MenuItem Header="_Options" Click="OnOptionsClicked" />
          <Separator />
          <MenuItem Header="_Exit" />
        </MenuItem>
      </Menu>
    </DockPanel>
    <TextBox x:Name="textToSendBox" HorizontalAlignment="Left" Height="103" Margin="10,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="356"/>
    <Button x:Name="sendTextButton" Content="Send" HorizontalAlignment="Left" Margin="148,137,0,0" VerticalAlignment="Top" Height="36" Width="58" Click="sendTextButton_Click"/>

    <Label Content="Text/Speech history" HorizontalAlignment="Left" Margin="115,175,0,0" VerticalAlignment="Top"/>
    <ListBox HorizontalAlignment="Left" Height="182" Margin="10,203,0,0" VerticalAlignment="Top" Width="356">
      
    </ListBox>
  </Grid>
</Window>
